@page
@model web_store_app.Pages.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<h1>Checkout</h1>

<form id="checkout-form" method="POST" onsubmit="handleSubmit(event)">
     @* <h2 id="total-value"></h2> *@

    <div>
        <h3>Personal Details</h3>
        <br />
        <div>
            <label for="name">Full Name:</label>
            <input type="text" id="name" name="name" required placeholder="Enter your full name">
        </div>
        <div>
            <label for="email">Email Address:</label>
            <input type="email" id="email" name="email" required placeholder="Enter your email address">
        </div>
        <div>
            <label for="dob">Date of Birth:</label>
            <input type="text" id="dob" name="dob" required placeholder="Enter your Date of Birth - Format: dd/mm/yyyy">
        </div>
        <div>
            <label for="phone">Phone Number:</label>
            <input type="tel" id="phone" name="phone" placeholder="Enter your phone number">
        </div>
    </div>
    <br />

    <div>
        <h3>Shipping Details</h3>
        <br />
        <div>
            <label for="country">Country:</label>
            <input type="text" id="country" name="country" required placeholder="Enter country name">
        </div>
        <div>
            <label for="state">Province / State:</label>
            <input type="text" id="state" name="state" required placeholder="Enter province or state">
        </div>
        <div>
            <label for="city">City / Town:</label>
            <input type="text" id="city" name="city" required placeholder="Enter city or town">
        </div>
        <div>
            <label for="street">Street Address:</label>
            <input type="text" id="street" name="street" required placeholder="Enter street address">
        </div>

    </div>
    <br />

    <div>
        <h3>Payment Details</h3>
        <br />
        <div>
            <label for="card-number">Card number:</label>
            <input type="text" id="card-num" name="card-num" required placeholder="Enter card number">
        </div>
        <div>
            <label for="card-date">Expiry date:</label>
            <input type="text" id="card-date" name="card-date" required placeholder="Enter card expiry - mm/yy">
        </div>
        <div>
            <label for="card-cvv">Card cvv:</label>
            <input type="text" id="cvv" name="cvv" required placeholder="Enter 3 digit cvv">
        </div>
        <div>
            <label for="card-name">Name on card:</label>
            <input type="text" id="card-name" name="card-name" required placeholder="Enter name on card">
        </div>
    </div>

    <div>
        <label for="notes">Order Notes:</label>
        <textarea id="notes" name="notes" placeholder="Any additional information"></textarea>
    </div>

    <br />

    <h2 id="total-value"></h2>
    <div id="total">
        @* get cart total *@
    </div>

    <button type="button" onclick="clearCart()" style="display: inline-block; background-color: red; color: white; border: none; border-radius: 8px; padding: 10px; text-align: center; cursor: pointer;">
        Clear Cart
    </button>
    <button type="submit" style="display: inline-block; background-color: var(--primary-color); color: white; border: none; border-radius: 8px; padding: 10px; text-align: center; cursor: pointer;">
        Place Order
    </button>
</form>


<script src="js/checkout.js"></script>
